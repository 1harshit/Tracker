<% layout('layout') -%>
<section class="content-header">
    <h1>
        <%= heading%>
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><%= heading%></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6 col-md-offset-3">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Tracker Details</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Device ID</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter unique device id">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Device Name</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter device name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">MAC</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="MAC address of the device">
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div><!-- /.box -->
        </div> <!-- .col-md-6 -->
    </div>   <!-- /.row -->
</section><!-- /.content -->
